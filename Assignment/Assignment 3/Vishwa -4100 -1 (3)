

#Traffic light code for Raspberry pi (Pico)----------------------------------------+--------------------



from gpiozero import TrafficLights

from time import sleep



Lights = TrafficLights(0, 1, 2)



While True:

      Lights.green.on()

      print("its green on")

      sleep(1)

      Lights.amber.on()

      print("its yellow on")

      sleep(1)

      Light.red.on()

      print("its red on")

      sleep(1)

      Light.off()

      print("light is stoped")





